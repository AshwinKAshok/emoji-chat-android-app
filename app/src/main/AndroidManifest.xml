<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.neu.madcourse.emoji_chat">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_emoji_cool"
        android:supportsRtl="true"
        android:theme="@style/Theme.Emoji_chat">
        <activity android:name=".activities.AllMessagesActivity"></activity>
        <activity android:name=".activities.SendMessageActivity" />
        <activity android:name=".activities.UserLandingPageActivity" />
        <activity android:name=".activities.ChatActivity" />
        <activity android:name=".activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <service
            android:name=".service.StickerMessagingService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
    </application>

</manifest>